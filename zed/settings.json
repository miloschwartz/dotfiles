// Zed settings
//
// For information on how to configure Zed, see the Zed // documentation: https://zed.dev/docs/configuring-zed
// Defaults: https://github.com/zed-industries/zed/blob/main/assets/settings/default.json
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-latest"
        },
        "version": "2"
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "tab_size": 4,
    "hard_tabs": false,
    "preferred_line_length": 80,
    "show_copilot_suggestions": true,
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4
    },
    "vim": {
        "use_system_clipboard": "on_yank",
        "highlight_on_yank_duration": 0
    },
    "vim_mode": true,
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "theme": {
        "mode": "system",
        "light": "Andromeda",
        "dark": "Github Dark"
    },
    "relative_line_numbers": true,
    "format_on_save": "off",
    "buffer_font_features": {
        "calt": false
    },
    "vertical_scroll_margin": 10,
    "cursor_shape": "block",
    "languages": {
        "TypeScript": {
            "prettier": {
                "allowed": true
            }
        },
        "TSX": {
            "prettier": {
                "allowed": true
            }
        },
        "HTML": {
            "prettier": {
                "allowed": true
            }
        }
    },
    "cursor_blink": false,
    "use_autoclose": true,
    "current_line_highlight": "none",
    "linked_edits": false,
    "gutter": {
        "code_actions": false,
        "runnables": false
    },
    "extend_comment_on_newline": false,
    "project_panel": {
        "auto_fold_dirs": false
    },
    "git": {
        "inline_blame": {
            "enabled": false,
            "delay_ms": 1000
        }
    },
    "terminal": {
        "detect_venv": {
            "on": {
                "directories": []
            }
        }
    }
}
