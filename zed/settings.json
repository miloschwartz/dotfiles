// Zed settings
//
// For information on how to configure Zed, see the Zed // documentation: https://zed.dev/docs/configuring-zed
// Defaults: https://github.com/zed-industries/zed/blob/main/assets/settings/default.json
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"assistant": {
		"default_model": {
			"provider": "openai",
			"model": "gpt-4o"
		},
		"version": "2"
	},
	"tabs": {
		"git_status": true,
		"file_icons": true
	},
	"telemetry": {
		"metrics": false,
		"diagnostics": false
	},
	"tab_size": 4,
	"hard_tabs": true,
	"preferred_line_length": 80,
	"show_copilot_suggestions": true,
	"prettier": {
		"printWidth": 80,
		"tabWidth": 4
	},
	"vim": {
		"use_system_clipboard": "on_yank"
	},
	"vim_mode": true,
	"ui_font_size": 18,
	"buffer_font_size": 16,
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "One Dark"
	},
	"relative_line_numbers": true,
	"format_on_save": "off",
	"buffer_font_features": {
		"calt": false
	},
	"buffer_font_family": "JetBrains Mono",
	"languages": {
		"TypeScript": {
			"prettier": {
				"allowed": true
			}
		},
		"TSX": {
			"prettier": {
				"allowed": true
			}
		}
	},
	"use_autoclose": true,
	"linked_edits": true,
	"gutter": {
		"code_actions": false,
		"runnables": false
	},
	"extend_comment_on_newline": false,
	"project_panel": {
		"auto_fold_dirs": false
	}
}
